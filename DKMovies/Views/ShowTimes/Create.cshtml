@model DKMovies.Models.ShowTime
@{
    ViewData["Title"] = "Create Showtime";
}

<h1 class="mb-4">🎬 Create Showtime</h1>

<div class="shadow-sm p-4 bg-light rounded">
    <form asp-action="Create">
        <input type="hidden" asp-for="MovieID" value="@ViewBag.MovieID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">🎥 Movie</label>
            <input type="text" class="form-control" value="@ViewBag.MovieTitle" disabled />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="TheaterID" class="form-label">🏛 Theater</label>
                <select id="TheaterID" name="TheaterID" class="form-select">
                    <option value="">-- Select Theater --</option>
                    @foreach (var theater in ViewBag.Theaters as List<DKMovies.Models.Theater>)
                    {
                        <option value="@theater.ID">@theater.Name</option>
                    }
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="AuditoriumID" class="form-label"></label>
                <select asp-for="AuditoriumID" class="form-select" id="AuditoriumID"></select>
                <span asp-validation-for="AuditoriumID" class="text-danger small"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" id="StartTime" />
                <span asp-validation-for="StartTime" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">⏱ Duration</label>
                <input type="text" class="form-control" value="@ViewBag.MovieDuration minutes" disabled />
                <input type="hidden" asp-for="DurationMinutes" value="@ViewBag.MovieDuration" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="SubtitleLanguageID" class="form-label"></label>
            <select asp-for="SubtitleLanguageID" class="form-select" asp-items="ViewBag.LanguageID">
                <option value="">-- None --</option>
            </select>
            <span asp-validation-for="SubtitleLanguageID" class="text-danger small"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Is3D" class="form-check-input" />
            <label asp-for="Is3D" class="form-check-label"></label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const startTimeInput = document.getElementById("StartTime");
            const now = new Date();
            const formatted = now.toISOString().slice(0, 16); // "yyyy-MM-ddTHH:mm"
            startTimeInput.min = formatted;
            if (!startTimeInput.value) startTimeInput.value = formatted;
        });

        $('#TheaterID').change(function () {
            const theaterId = $(this).val();
            const dropdown = $('#AuditoriumID');
            dropdown.html('<option>Loading...</option>');
            if (theaterId) {
                $.get('@Url.Action("GetAuditoriumsByTheater", "ShowTimes")', { theaterId }, function (data) {
                    dropdown.empty().append('<option value="">-- Select Auditorium --</option>');
                    data.forEach(a => dropdown.append(`<option value="${a.id}">${a.name}</option>`));
                });
            } else {
                dropdown.html('<option value="">-- Select Auditorium --</option>');
            }
        });
    </script>
}
