@model IEnumerable<DKMovies.Models.ShowTime>
@{
    ViewData["Title"] = "Manage ShowTimes";
    var query = Context.Request.Query;
    var currentTitle = query["title"].ToString();
    var currentSubtitleLangId = query["subtitleLang"];
    var currentIs3D = query["is3D"];
}

<style>
    .showtime-card {
        transition: transform 0.2s ease;
        cursor: pointer;
        position: relative;
    }

        .showtime-card:hover {
            transform: scale(1.02);
            z-index: 1;
        }

    .showtime-footer {
        display: flex;
        justify-content: flex-end;
        padding: 0.5rem 0.75rem;
        background-color: #f8f9fa;
    }
</style>

<h1 class="mb-4">🎬 Manage ShowTimes</h1>

<form method="get" class="row g-3 mb-4 align-items-end">
    <div class="col-md-4">
        <label class="form-label">Search by Movie Title</label>
        <input type="text" name="title" value="@currentTitle" class="form-control" placeholder="Enter title..." />
    </div>
    <div class="col-md-3">
        <label class="form-label">Subtitle Language</label>
        <select name="subtitleLang" class="form-select">
            <option value="">All</option>
            @foreach (var lang in ViewBag.SubtitleLanguages as List<DKMovies.Models.Language>)
            {
                <option value="@lang.ID" selected="@(lang.ID.ToString() == currentSubtitleLangId)">@lang.Name</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">3D</label>
        <select name="is3D" class="form-select">
            <option value="">All</option>
            <option value="true" selected="@(currentIs3D == "true")">Yes</option>
            <option value="false" selected="@(currentIs3D == "false")">No</option>
        </select>
    </div>
    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-outline-primary w-100"><i class="bi bi-filter-circle"></i> Apply</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">🎞 Total: @Model.Count() showtimes</h5>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i> Add New Showtime</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-5 g-3">
    @foreach (var show in Model)
    {
        var poster = string.IsNullOrWhiteSpace(show.Movie?.PosterImagePath)
        ? Url.Content("~/images/movie_posters/default.jpg")
        : Url.Content($"~/images/movie_posters/{show.Movie.PosterImagePath}");

        <div class="col">
            <div class="card showtime-card shadow-sm border-0 h-100" onclick="location.href='@Url.Action("Edit", new { id = show.ID })'">
                <img src="@poster" class="card-img-top" alt="@show.Movie?.Title" style="height: 180px; object-fit: cover;" />

                <div class="card-body p-2">
                    <h6 class="card-title text-truncate">@show.Movie?.Title</h6>
                    <p class="card-text small mb-1"><strong>Start:</strong> @show.StartTime.ToString("g")</p>
                    <p class="card-text small mb-1"><strong>⏱</strong> @show.DurationMinutes min | <strong>@(show.Is3D ? "3D" : "2D")</strong></p>
                    <p class="card-text small text-muted">@show.Auditorium?.Name - @show.Auditorium?.Theater?.Name</p>
                </div>

                <div class="showtime-footer">
                    <form asp-action="Delete" asp-route-id="@show.ID" method="post" onsubmit="event.stopPropagation(); return confirm('Delete this showtime?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
