@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg p-4 border-danger" style="max-width: 600px; margin: auto;">
        <div class="card-body">
            <h2 class="text-danger mb-3"><i class="bi bi-x-circle-fill"></i> Payment Cancelled</h2>
            <p class="lead">Your payment process was cancelled before completion.</p>
            <p>You can return to your ticket and try the payment again, or make changes to your booking if needed.</p>

            <div class="mt-4">
                <a href="@Url.Action("OrderTicketDetails", "Tickets", new { id = ViewBag.ShowTimeId ?? 0 })" class="btn btn-outline-primary me-2">
                    <i class="bi bi-arrow-repeat"></i> Try Again
                </a>
                <a href="@Url.Action("Index", "MoviesList")" class="btn btn-outline-secondary">
                    <i class="bi bi-house-door-fill"></i> Back to Movies
                </a>
            </div>
        </div>
    </div>
</div>
