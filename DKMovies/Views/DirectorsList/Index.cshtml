@model IEnumerable<DKMovies.Models.Director>

@{
    ViewData["Title"] = "Directors";
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

@using System.Security.Claims
@{
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<!-- Load Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .director-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .director-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .director-image {
        height: 300px;
        object-fit: cover;
        object-position: center;
        border-radius: 8px 8px 0 0;
    }

    .director-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .director-location {
        color: #666;
        font-size: 0.9rem;
    }

    .pagination {
        margin-top: 2rem;
    }

    /* Modern input styling */
    .input-group .form-control {
        border-radius: 0.375rem 0 0 0.375rem;
        font-size: 0.95rem;
    }

    .input-group .btn {
        border-radius: 0 0.375rem 0.375rem 0;
    }

    .input-group.shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border-radius: 0.375rem;
    }

    /* Sort button styling */
    .btn-outline-secondary.active {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

    .btn-outline-secondary:hover {
        background-color: #5c636a;
        border-color: #565e64;
        color: white;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }
</style>

<!-- Modern Search Section -->
<div class="container mt-4 mb-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="mb-3">
                <i class="bi bi-camera-reels-fill me-2"></i>Directors Directory
            </h1>
            <form asp-action="Index" method="get" class="d-flex">
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <div class="input-group shadow-sm">
                    <input type="text" name="searchString" value="@currentFilter"
                           class="form-control border-0 py-2"
                           placeholder="Search directors by name or place of birth..." />
                    <button class="btn btn-primary px-4" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            @if (role == "Admin")
            {
                <a asp-controller="Directors" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Add New Director
                </a>
            }
        </div>
    </div>

    <!-- Sort Options -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
                <span class="text-muted me-2">Sort by:</span>

                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["NameSortParm"]"
                   asp-route-searchString="@currentFilter"
                   class="btn btn-outline-secondary btn-sm @(string.IsNullOrEmpty(currentSort) || currentSort == "name_desc" ? "active" : "")">
                    Name @(currentSort == "name_desc" ? "↓" : "↑")
                </a>

                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DateSortParm"]"
                   asp-route-searchString="@currentFilter"
                   class="btn btn-outline-secondary btn-sm @(currentSort == "Date" || currentSort == "date_desc" ? "active" : "")">
                    Birth Date @(currentSort == "date_desc" ? "↓" : currentSort == "Date" ? "↑" : "")
                </a>

                @if (!string.IsNullOrEmpty(currentFilter))
                {
                    <a asp-action="Index" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-x-circle me-1"></i> Clear Search
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Directors Grid -->
<div class="container">
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var director in Model)
            {
                var directorImagePath = string.IsNullOrWhiteSpace(director.ProfileImagePath)
                ? Url.Content("~/images/default_person.png")
                : Url.Content($"~/images/directors/{director.ProfileImagePath}");

                var age = director.DateOfBirth.HasValue
                ? DateTime.Now.Year - director.DateOfBirth.Value.Year - (DateTime.Now.DayOfYear < director.DateOfBirth.Value.DayOfYear ? 1 : 0)
                : (int?)null;

                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card director-card border-0 shadow-sm h-100">
                        <a asp-action="Details" asp-route-id="@director.ID" class="text-decoration-none">
                            <img src="@directorImagePath"
                                 alt="@director.FullName"
                                 class="card-img-top director-image"
                                 onerror="this.src='@Url.Content("~/images/default_person.png")'" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="director-name">@director.FullName</h5>

                                @if (!string.IsNullOrWhiteSpace(director.PlaceOfBirth))
                                {
                                    <p class="director-location mb-2">
                                        <i class="bi bi-geo-alt me-1"></i>@director.PlaceOfBirth
                                    </p>
                                }

                                @if (age.HasValue)
                                {
                                    <p class="text-muted small mb-2">
                                        <i class="bi bi-calendar me-1"></i>Age: @age
                                    </p>
                                }

                                @if (director.DateOfBirth.HasValue)
                                {
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-cake me-1"></i>Born: @director.DateOfBirth.Value.ToString("MMM dd, yyyy")
                                    </p>
                                }
                            </div>
                        </a>

                        @if (role == "Admin")
                        {
                            <div class="card-footer bg-transparent border-top-0 pt-0">
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="Directors" asp-action="Edit" asp-route-id="@director.ID" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Directors" asp-action="Delete" asp-route-id="@director.ID" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav aria-label="Directors pagination" class="d-flex justify-content-center">
                <ul class="pagination">
                    <!-- Previous Page -->
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(currentPage - 1)"
                               asp-route-searchString="@currentFilter"
                               asp-route-sortOrder="@currentSort">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    <!-- Page Numbers -->
                    @{
                        int startPage = Math.Max(1, currentPage - 2);
                        int endPage = Math.Min(totalPages, currentPage + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchString="@currentFilter"
                               asp-route-sortOrder="@currentSort">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@currentFilter"
                               asp-route-sortOrder="@currentSort">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@totalPages"
                               asp-route-searchString="@currentFilter"
                               asp-route-sortOrder="@currentSort">@totalPages</a>
                        </li>
                    }

                    <!-- Next Page -->
                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(currentPage + 1)"
                               asp-route-searchString="@currentFilter"
                               asp-route-sortOrder="@currentSort">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-camera-reels display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">No directors found</h3>
            @if (!string.IsNullOrEmpty(currentFilter))
            {
                <p class="text-muted">Try adjusting your search criteria.</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i> View All Directors
                </a>
            }
            else if (role == "Admin")
            {
                <p class="text-muted">Get started by adding your first director.</p>
                <a asp-controller="Directors" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Add New Director
                </a>
            }
        </div>
    }
</div>