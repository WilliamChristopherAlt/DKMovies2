    }

    .alert {
        border-left: 4px solid #ffc107;
    }

    .card.bg-light .border {
        background: white;
        transition: all 0.2s ease;
    }

        .card.bg-light .border:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
</style>