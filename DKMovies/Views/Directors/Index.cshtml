@model IEnumerable<DKMovies.Models.Director>
@{
    ViewData["Title"] = "Directors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Directors</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create New Director
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Profile</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                            <th>Age</th>
                            <th>@Html.DisplayNameFor(model => model.PlaceOfBirth)</th>
                            <th>Movies</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        var imagePath = string.IsNullOrWhiteSpace(item.ProfileImagePath)
                                        ? Url.Content("~/images/directors/default.png")
                                        : Url.Content($"~/images/directors/{item.ProfileImagePath}");
                                    }
                                    <img src="@imagePath"
                                         alt="@item.FullName"
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;"
                                         onerror="this.src='@Url.Content("~/images/directors/default.png")'" />
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                </td>
                                <td>
                                    @if (item.DateOfBirth.HasValue)
                                    {
                                        @item.DateOfBirth.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DateOfBirth.HasValue)
                                    {
                                        var age = DateTime.Today.Year - item.DateOfBirth.Value.Year;
                                        if (item.DateOfBirth.Value.Date > DateTime.Today.AddYears(-age))
                                        {
                                            age--;
                                        }
                                        <span>@age years</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.PlaceOfBirth))
                                    {
                                        @Html.DisplayFor(modelItem => item.PlaceOfBirth)
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@(item.Movies?.Count ?? 0) movies</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-camera-reels" style="font-size: 4rem; color: #dee2e6;"></i>
                    <p class="text-muted mt-3">No directors found. <a asp-action="Create">Create the first one</a>.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Load Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />