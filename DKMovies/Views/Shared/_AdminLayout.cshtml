<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DKMovies Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="sb-nav-fixed">
    <!-- TOP NAVBAR -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "AdminDashboard")">DKMovies Admin</a>
        <button class="btn btn-link btn-sm me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
    </nav>

    <div id="layoutSidenav">
        <!-- SIDEBAR -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark bg-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">QUẢN LÝ</div>

                        <a class="nav-link" href="@Url.Action("Index", "AdminDashboard")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Tổng quan
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminMovie")">
                            <div class="sb-nav-link-icon"><i class="fas fa-film"></i></div>
                            Phim
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminShowtime")">
                            <div class="sb-nav-link-icon"><i class="fas fa-clock"></i></div>
                            Lịch chiếu
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminOrder")">
                            <div class="sb-nav-link-icon"><i class="fas fa-ticket-alt"></i></div>
                            Đơn hàng vé
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminConcession")">
                            <div class="sb-nav-link-icon"><i class="fas fa-hamburger"></i></div>
                            Đồ ăn / Combo
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminUser")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Người dùng
                        </a>

                        <a class="nav-link" href="@Url.Action("Index", "AdminEmployee")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
                            Nhân viên
                        </a>

                        <a class="nav-link" href="@Url.Action("Logout", "Account")">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                            Đăng xuất
                        </a>

                    </div>
                </div>
            </nav>
        </div>

        <!-- MAIN CONTENT -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4 pt-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("sidebarToggle")?.addEventListener("click", function () {
            document.body.classList.toggle("sb-sidenav-toggled");
        });
    </script>
    <script src="~/js/admin.js"></script>
</body>
</html>
