<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DKMovies</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts + Icons -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- MDBootstrap & Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- MDB CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .auth-container {
            min-height: 100vh;
        }
    </style>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </environment>

</head>
<body>
    <div class="container d-flex justify-content-center align-items-center auth-container">
        <div class="w-100" style="max-width: 500px;">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- MDB UI Kit JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    <!-- Custom init for tabs -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          if (typeof mdb !== "undefined" && mdb.Tab) {
              const tabElements = document.querySelectorAll('[data-mdb-pill-init]');
              tabElements.forEach((el) => new mdb.Tab(el));
          }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
