@model DKMovies.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-tachometer-alt text-primary me-3 fs-3"></i>
        <h2 class="mb-0 fw-bold text-dark">Dashboard</h2>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.ErrorMessage
        </div>
    }

    <!-- Dashboard Cards Row 1 -->
    <div class="row g-4 mb-5">
        <!-- Users -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-info text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Users</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-users fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminUser")"
                   class="card-footer bg-white border-0 text-info text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>View Details</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Employees -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-success text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Employees</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalEmployees</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-user-tie fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminEmployee")"
                   class="card-footer bg-white border-0 text-success text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Manage Employees</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Movies -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-warning text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Movies</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalMovies</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-film fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminMovie")"
                   class="card-footer bg-white border-0 text-warning text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Manage Movies</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Showtimes -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-danger text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Showtimes</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalShowTimes</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-clock fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminShowTime")"
                   class="card-footer bg-white border-0 text-danger text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Manage Showtimes</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Dashboard Cards Row 2 -->
    <div class="row g-4 mb-5">
        <!-- Concessions -->
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-secondary text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Concessions</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalConcessions</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-utensils fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminConcession")"
                   class="card-footer bg-white border-0 text-secondary text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Manage Concessions</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Revenue -->
        <div class="col-xl-8 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-dark text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small opacity-75 mb-2">Total Revenue (All Sources)</div>
                            <div class="h3 mb-1 fw-bold">@String.Format("${0:N2}", ViewBag.TotalRevenue)</div>
                            <div class="text-white-50 small">
                                <i class="fas fa-ticket-alt me-1"></i> Tickets: <strong>@String.Format("${0:N2}", ViewBag.TicketRevenue)</strong><br />
                                <i class="fas fa-hamburger me-1"></i> Concessions: <strong>@String.Format("${0:N2}", ViewBag.ConcessionRevenue)</strong>
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-chart-line fs-4"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("MovieDashboard", "Admins")"
                   class="card-footer bg-white border-0 text-dark text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>View Movie Analytics</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Time Period Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex flex-wrap align-items-center justify-content-between">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="fas fa-chart-bar me-2 text-primary"></i>Performance Analytics
                        </h5>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Index", new { period = "all" })"
                               class="btn @(Model.CurrentPeriod == "all" ? "btn-primary" : "btn-outline-primary") btn-sm">
                                All Time
                            </a>
                            <a href="@Url.Action("Index", new { period = "year" })"
                               class="btn @(Model.CurrentPeriod == "year" ? "btn-primary" : "btn-outline-primary") btn-sm">
                                Last Year
                            </a>
                            <a href="@Url.Action("Index", new { period = "month" })"
                               class="btn @(Model.CurrentPeriod == "month" ? "btn-primary" : "btn-outline-primary") btn-sm">
                                Last Month
                            </a>
                            <a href="@Url.Action("Index", new { period = "7days" })"
                               class="btn @(Model.CurrentPeriod == "7days" ? "btn-primary" : "btn-outline-primary") btn-sm">
                                Last 7 Days
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Revenue Analytics Section -->
    <!-- Top 5 Movies by Revenue -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0 fw-semibold">
                            <i class="fas fa-trophy me-2"></i>Top 5 Movies by Revenue
                        </h5>
                        <span class="badge bg-white text-primary fs-7">
                            @(Model.CurrentPeriod == "all" ? "All Time" :
                                Model.CurrentPeriod == "year" ? "Last Year" :
                                Model.CurrentPeriod == "month" ? "Last Month" : "Last 7 Days")
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.TopMovies.Any())
                    {
                        <div class="row g-3">
                            @for (int i = 0; i < Model.TopMovies.Count; i++)
                            {
                                var movie = Model.TopMovies[i];
                                <div class="col-lg col-md-6">
                                    <div class="revenue-item">
                                        <div class="rank-number">@(i + 1)</div>
                                        <div class="item-image">
                                            @if (!string.IsNullOrEmpty(movie.PosterImagePath))
                                            {
                                                <img src="~/images/movie_posters/@movie.PosterImagePath" alt="@movie.MovieTitle" />
                                            }
                                            else
                                            {
                                                <div class="placeholder-image">
                                                    <i class="fas fa-film"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="item-content">
                                            <h6 class="item-title">@movie.MovieTitle</h6>
                                            <div class="revenue-amount">$@String.Format("{0:N0}", movie.Revenue)</div>
                                            <div class="item-stats">
                                                <span><i class="fas fa-ticket-alt"></i> @movie.TicketsSold</span>
                                                @if (movie.AverageRating > 0)
                                                {
                                                    <span><i class="fas fa-star"></i> @movie.AverageRating.ToString("F1")</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-film text-muted mb-3"></i>
                            <p class="text-muted mb-0">No movie revenue data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top 5 Theaters by Revenue -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0 fw-semibold">
                            <i class="fas fa-building me-2"></i>Top 5 Theaters by Revenue
                        </h5>
                        <span class="badge bg-white text-success fs-7">
                            @(Model.CurrentPeriod == "all" ? "All Time" :
                                Model.CurrentPeriod == "year" ? "Last Year" :
                                Model.CurrentPeriod == "month" ? "Last Month" : "Last 7 Days")
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.TopTheaters.Any())
                    {
                        <div class="row g-3">
                            @for (int i = 0; i < Model.TopTheaters.Count; i++)
                            {
                                var theater = Model.TopTheaters[i];
                                <div class="col-lg col-md-6">
                                    <div class="revenue-item">
                                        <div class="rank-number">@(i + 1)</div>
                                        <div class="item-image">
                                            @if (theater.TheaterImages.Any())
                                            {
                                                <img src="~/images/theaters/@theater.TheaterImages.First().ImageUrl" alt="@theater.TheaterName" />
                                            }
                                            else
                                            {
                                                <div class="placeholder-image">
                                                    <i class="fas fa-building"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="item-content">
                                            <h6 class="item-title">@theater.TheaterName</h6>
                                            <div class="item-location">@theater.Location</div>
                                            <div class="revenue-amount">$@String.Format("{0:N0}", theater.TotalRevenue)</div>
                                            <div class="item-stats">
                                                <span><i class="fas fa-ticket-alt"></i> @theater.TotalTicketsSold</span>
                                                <span><i class="fas fa-chair"></i> @theater.TotalCapacity</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-building text-muted mb-3"></i>
                            <p class="text-muted mb-0">No theater revenue data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top 5 Concessions by Revenue -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0 fw-semibold">
                            <i class="fas fa-utensils me-2"></i>Top 5 Concessions by Revenue
                        </h5>
                        <span class="badge bg-white text-warning fs-7">
                            @(Model.CurrentPeriod == "all" ? "All Time" :
                                Model.CurrentPeriod == "year" ? "Last Year" :
                                Model.CurrentPeriod == "month" ? "Last Month" : "Last 7 Days")
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.TopConcessions.Any())
                    {
                        <div class="row g-3">
                            @for (int i = 0; i < Model.TopConcessions.Count; i++)
                            {
                                var concession = Model.TopConcessions[i];
                                <div class="col-lg col-md-6">
                                    <div class="revenue-item">
                                        <div class="rank-number">@(i + 1)</div>
                                        <div class="item-image">
                                            @if (!string.IsNullOrEmpty(concession.ImagePath))
                                            {
                                                <img src="~/images/concessions/@concession.ImagePath" alt="@concession.ConcessionName" />
                                            }
                                            else
                                            {
                                                <div class="placeholder-image">
                                                    <i class="fas fa-utensils"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="item-content">
                                            <h6 class="item-title">@concession.ConcessionName</h6>
                                            <div class="item-category">@concession.Category</div>
                                            <div class="revenue-amount">$@String.Format("{0:N0}", concession.Revenue)</div>
                                            <div class="item-stats">
                                                <span><i class="fas fa-shopping-cart"></i> @concession.QuantitySold</span>
                                                <span><i class="fas fa-dollar-sign"></i> $@String.Format("{0:N2}", concession.AveragePrice)</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-utensils text-muted mb-3"></i>
                            <p class="text-muted mb-0">No concession revenue data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Panel -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Create", "AdminMovie")" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-plus-circle me-2"></i>Add New Movie
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Create", "AdminShowTime")" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-calendar-plus me-2"></i>Schedule Showtime
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Create", "AdminEmployee")" class="btn btn-outline-info w-100 py-3">
                                <i class="fas fa-user-plus me-2"></i>Add Employee
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Create", "AdminConcession")" class="btn btn-outline-warning w-100 py-3">
                                <i class="fas fa-hamburger me-2"></i>Add Concession
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modern Revenue Analytics Styles */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
        }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        border: none;
    }

    /* Revenue Item Layout */
    .revenue-item {
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        height: 100%;
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

        .revenue-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            border-color: #dee2e6;
        }

    /* Rank Number */
    .rank-number {
        position: absolute;
        top: -8px;
        left: -8px;
        width: 28px;
        height: 28px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
        box-shadow: 0 2px 8px rgba(0,123,255,0.3);
        z-index: 2;
    }

    .revenue-item:nth-child(1) .rank-number {
        background: linear-gradient(135deg, #ffd700, #ffb300);
        box-shadow: 0 2px 8px rgba(255,215,0,0.4);
    }

    .revenue-item:nth-child(2) .rank-number {
        background: linear-gradient(135deg, #c0c0c0, #a0a0a0);
        box-shadow: 0 2px 8px rgba(192,192,192,0.4);
    }

    .revenue-item:nth-child(3) .rank-number {
        background: linear-gradient(135deg, #cd7f32, #b8621b);
        box-shadow: 0 2px 8px rgba(205,127,50,0.4);
    }

    /* Image Container - Made Much Larger */
    .item-image {
        width: 120px;
        height: 160px;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 15px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.15);
        flex-shrink: 0;
    }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .item-image:hover img {
            transform: scale(1.05);
        }

    .placeholder-image {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 2.5rem;
        border-radius: 8px;
    }

    /* Content Styling */
    .item-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
        width: 100%;
    }

    .item-title {
        font-size: 1rem;
        font-weight: 600;
        color: #212529;
        margin: 0;
        line-height: 1.3;
        max-height: 2.6em;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        text-align: center;
    }

    .item-location,
    .item-category {
        font-size: 0.85rem;
        color: #6c757d;
        margin: 0;
    }

    /* Revenue Amount - Toned Down */
    .revenue-amount {
        font-size: 0.95rem;
        font-weight: 600;
        color: #495057;
        background: #f8f9fa;
        padding: 4px 10px;
        border-radius: 12px;
        margin: 6px 0;
        border: 1px solid #e9ecef;
    }

    /* Stats */
    .item-stats {
        display: flex;
        gap: 12px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: auto;
    }

        .item-stats span {
            font-size: 0.75rem;
            color: #6c757d;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .item-stats i {
            color: #007bff;
            font-size: 0.7rem;
        }

        .item-stats span:nth-child(2) i {
            color: #ffc107;
        }

        .item-stats span:nth-child(3) i {
            color: #28a745;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
        }

    /* Responsive Design */
    @@media (max-width: 1199.98px) {
        .col-lg

    {
        flex: 0 0 auto;
        width: 33.333333%;
    }

    }

    @@media (max-width: 991.98px) {
        .col-lg

    {
        flex: 0 0 auto;
        width: 50%;
    }

    .revenue-item {
        padding: 16px;
    }

    .item-image {
        width: 100px;
        height: 140px;
    }

    }

    @@media (max-width: 767.98px) {
        .col-lg

    {
        flex: 0 0 auto;
        width: 100%;
    }

    .revenue-item {
        padding: 20px;
        flex-direction: row;
        text-align: left;
        align-items: flex-start;
    }

    .item-image {
        width: 80px;
        height: 110px;
        margin-right: 15px;
        margin-bottom: 0;
        flex-shrink: 0;
    }

    .item-content {
        align-items: flex-start;
        text-align: left;
    }

    .rank-number {
        top: 15px;
        left: 15px;
    }

    }

    /* Badge Improvements */
    .fs-7 {
        font-size: 0.875rem;
    }

    /* Hover Effects for Cards */
    .btn-outline-primary:hover,
    .btn-outline-success:hover,
    .btn-outline-info:hover,
