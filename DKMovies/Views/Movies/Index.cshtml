@model IEnumerable<DKMovies.Models.Movie>
@{
    ViewData["Title"] = "Movies Management";
    int.TryParse(ViewContext.HttpContext.Request.Query["languageId"], out int selectedLangId);
}

<style>
    .movie-card {
        transition: transform 0.2s ease;
        cursor: pointer;
        position: relative;
    }

        .movie-card:hover {
            transform: scale(1.02);
            z-index: 1;
        }

    .movie-body {
        cursor: pointer;
    }

    .movie-footer {
        display: flex;
        justify-content: flex-end;
        background-color: #f8f9fa;
        padding: 0.5rem 0.75rem;
    }
</style>

<h1 class="mb-4">🎬 Manage Movies</h1>

<form asp-action="Index" method="get" class="row g-3 mb-4 align-items-end">
    <div class="col-md-3">
        <input type="text" name="searchTitle" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="🔍 Search by title..." />
    </div>

    <div class="col-md-2">
        <select name="languageId" class="form-select">
            <option value="">🌐 All Languages</option>
            @foreach (var lang in ViewBag.Languages as List<DKMovies.Models.Language>)
            {
                <option value="@lang.ID" selected="@(lang.ID == selectedLangId)">@lang.Name</option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <select name="sortBy" class="form-select">
            <option value="">Sort by</option>
            <option value="title" selected="@(ViewData["CurrentSortBy"]?.ToString() == "title")">Title</option>
            <option value="release" selected="@(ViewData["CurrentSortBy"]?.ToString() == "release")">Release Date</option>
            <option value="rating" selected="@(ViewData["CurrentSortBy"]?.ToString() == "rating")">Rating</option>
            <option value="duration" selected="@(ViewData["CurrentSortBy"]?.ToString() == "duration")">Duration</option>
        </select>
    </div>

    <div class="col-md-2">
        <select name="sortOrder" class="form-select">
            <option value="asc" selected="@(ViewData["CurrentSortOrder"]?.ToString() == "asc")">↑ Ascending</option>
            <option value="desc" selected="@(ViewData["CurrentSortOrder"]?.ToString() == "desc")">↓ Descending</option>
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-outline-primary w-100"><i class="bi bi-filter-circle"></i> Apply Filters</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">🎞 Total: @Model.Count() movies</h5>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i> Add New Movie</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-5 g-4">
    @foreach (var movie in Model)
    {
        var imagePath = string.IsNullOrWhiteSpace(movie.PosterImagePath)
        ? Url.Content("~/images/movie_posters/default.jpg")
        : Url.Content($"~/images/movie_posters/{movie.PosterImagePath}");

        <div class="col">
            <div class="card movie-card h-100 shadow-sm border-0">
                <div class="movie-body" onclick="location.href='@Url.Action("Edit", "Movies", new { id = movie.ID })'">
                    <img src="@imagePath" class="card-img-top" alt="@movie.Title" style="aspect-ratio: 2/3; object-fit: cover;" />

                    <div class="card-body p-3">
                        <h5 class="card-title text-truncate" title="@movie.Title">@movie.Title</h5>
                        <div class="mb-2 small text-muted">
                            🎬 <strong>@movie.Rating?.Value</strong> • ⏱ @movie.DurationMinutes mins • 🗓 @(movie.ReleaseDate?.ToShortDateString() ?? "N/A")
                        </div>
                        <div class="mb-1"><i class="bi bi-translate"></i> <strong>Lang:</strong> @movie.Language?.Name</div>
                        <div class="mb-1"><i class="bi bi-globe"></i> <strong>Country:</strong> @movie.Country?.Name</div>
                        <div class="mb-1"><i class="bi bi-person-video"></i> <strong>Director:</strong> @movie.Director?.FullName</div>
                        <p class="card-text text-truncate mt-2" title="@movie.Description">
                            <i class="bi bi-card-text"></i> @movie.Description
                        </p>
                    </div>
                </div>
                <div class="movie-footer">
                    <form asp-action="Delete" asp-route-id="@movie.ID" method="post" onsubmit="event.stopPropagation(); return confirm('Delete this movie?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
